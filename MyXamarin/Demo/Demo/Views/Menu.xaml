<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.Views.Menu">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout>
                <Label Text="Menu" FontSize="30" />
                <Button Text="Login" Clicked="Login_Clicked"/>
                <Button Text="Profile" Clicked="Profile_Clicked"/>
                <Button Text="Brightness" Clicked="Brightness_Clicked"/>
                <Button Text="GetDevice" Clicked="GetDevice_Clicked"/>
                <Button Text="GetMyPosition" Clicked="GetMyPosition_Clicked"/>
                <Button Text="UploadImage" Clicked="UploadImage_Clicked"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <ContentPage></ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>